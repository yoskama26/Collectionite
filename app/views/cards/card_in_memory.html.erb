<%= form_with url: add_card_to_memory_path, method: :post do |form| %>
  <%= form.label :name, "Nom de la carte" %>
  <%= form.text_field :name %>

  <%= form.label :attack, "Attaque" %>
  <%= form.number_field :attack %>

  <%= form.label :defense, "Défense" %>
  <%= form.number_field :defense %>

  <%= form.label :effect, "Effet" %>
  <%= form.text_area :effect %>

  <%= form.submit "Ajouter la carte en mémoire" %>
<% end %>